<configuration>

    <!-- Define un appender que imprime en consola -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- ConfiguraciÃ³n por defecto: INFO para todo -->
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

    <!-- Ejemplo: activar DEBUG para tu paquete -->
    <logger name="com.rperezv365" level="DEBUG"/>

</configuration>